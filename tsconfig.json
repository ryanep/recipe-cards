{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es6",
      "esnext.asynciterable"
    ],
    "target": "es2022",
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "#/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
